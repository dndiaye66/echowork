generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  companies Company[]
}

model Company {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String?
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}
