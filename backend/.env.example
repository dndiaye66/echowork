# Copy to .env and set values

# Database Configuration
# For production, use a secure password and configure properly
DATABASE_URL="postgresql://echowork_user:change_this_password@localhost:5432/echowork_db?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend CORS Configuration
# For production, change to your actual domain
FRONTEND_URL=http://localhost:5173

# Allowed Origins for CORS (comma-separated list)
# Use this for multiple origins or when you need more control
# Supports wildcard patterns like https://*.example.com
# If not set, only FRONTEND_URL will be allowed
# Example: ALLOWED_ORIGINS=http://localhost:5173,http://185.98.136.93,https://echowork.net
# ALLOWED_ORIGINS=

# JWT Secret Key
# IMPORTANT: Change this to a strong secret in production!
# Generate one with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production

# Email configuration
# For development, you can use Ethereal (fake SMTP) or leave empty to use defaults
# For production, configure with real SMTP credentials (e.g., Gmail, SendGrid, etc.)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-email@ethereal.email
SMTP_PASS=your-password
EMAIL_FROM="EchoWork <noreply@echowork.com>"

# Production Settings (uncomment for production)
# NODE_ENV=production
# DATABASE_URL="postgresql://echowork_user:secure_password@localhost:5432/echowork_db?schema=public"
# FRONTEND_URL=https://your-domain.com
# JWT_SECRET=your-generated-secure-secret-key

