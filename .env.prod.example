# Production environment variables for Docker deployment
# Copy this file to .env.prod and update the values

# PostgreSQL Database Configuration
POSTGRES_USER=echowork_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=echowork_db

# Backend Configuration
JWT_SECRET=change_this_to_a_secure_random_string_at_least_32_chars
NODE_ENV=production

# Frontend Configuration
FRONTEND_URL=http://localhost

# Allowed Origins for CORS (comma-separated list)
# Add all domains that need to access the API
# Example: ALLOWED_ORIGINS=http://185.98.136.93,https://echowork.net,https://www.echowork.net
ALLOWED_ORIGINS=http://185.98.136.93,https://echowork.net

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="EchoWork <noreply@echowork.com>"

# SSL Configuration (for certbot service)
# DOMAIN=your-domain.com
# SSL_EMAIL=your-email@example.com
